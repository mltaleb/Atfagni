<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atfagni.Mobile.Controls.LoadingOverlay"
             x:Name="this"
             BackgroundColor="#CC000000" 
             IsVisible="{Binding IsBusy, Source={x:Reference this}}">
    <!-- BackgroundColor #CC000000 = Noir à 80% d'opacité -->

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">

        <ActivityIndicator IsRunning="{Binding IsBusy, Source={x:Reference this}}"
                           Color="#2196F3"
                           HeightRequest="80"
                           WidthRequest="80" />

        <Label Text="{Binding LoadingMessage, Source={x:Reference this}}"
               TextColor="White"
               FontSize="16"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentView>