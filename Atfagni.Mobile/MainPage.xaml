<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Atfagni.Mobile.ViewModels"
             x:DataType="vm:MainViewModel"
             x:Class="Atfagni.Mobile.MainPage"
             Shell.NavBarIsVisible="False">
    <!-- On cache la barre en haut pour le look -->

    <Grid RowDefinitions="*, Auto" Padding="30">

        <!-- Section Logo/Texte -->
        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Spacing="10">
            <Image Source="dotnet_bot.png" HeightRequest="150" HorizontalOptions="Center" />
            <Label Text="Atfagni" FontSize="44" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#2196F3" />
            <Label Text="Le covoiturage de la communauté" FontSize="18" HorizontalOptions="Center" Opacity="0.7" />
        </VerticalStackLayout>

        <!-- Section Boutons -->
        <VerticalStackLayout Grid.Row="1" Spacing="15" Margin="0,0,0,30">

            <Button Text="SE CONNECTER" 
                    Command="{Binding GoToLoginCommand}"
                    BackgroundColor="White" 
                    TextColor="#2196F3" 
                    BorderColor="#2196F3" 
                    BorderWidth="1"
                    HeightRequest="50"/>

            <Button Text="CRÉER UN COMPTE" 
                    Command="{Binding GoToRegisterCommand}"
                    BackgroundColor="#2196F3" 
                    TextColor="White"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>