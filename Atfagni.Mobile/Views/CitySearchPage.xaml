<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atfagni.Mobile.Views.CitySearchPage"
             xmlns:vm="clr-namespace:Atfagni.Mobile.ViewModels"
             xmlns:models="clr-namespace:Atfagni.Mobile.Models.Local"
             x:DataType="vm:CitySearchViewModel"
             Title="CitySearchPage">

    <Grid RowDefinitions="Auto, *">
            <SearchBar Placeholder="Rechercher..." Text="{Binding SearchText}" />

            <CollectionView Grid.Row="1" ItemsSource="{Binding Cities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:LocalCity">
                        <Grid Padding="15">
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CitySearchViewModel}}, Path=SelectCityCommand}"
                                CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage>