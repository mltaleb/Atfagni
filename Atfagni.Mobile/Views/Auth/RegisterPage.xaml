<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Atfagni.Mobile.ViewModels.Auth"
             x:DataType="vm:RegisterViewModel"
             x:Class="Atfagni.Mobile.Views.Auth.RegisterPage">

    <VerticalStackLayout Padding="30" Spacing="15">

        <!-- Sélection du rôle via Commandes -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button Text="Passager" Command="{Binding SelectRoleCommand}" CommandParameter="Passenger" />
            <Button Text="Chauffeur" Command="{Binding SelectRoleCommand}" CommandParameter="Driver" />
        </HorizontalStackLayout>

        <Entry Placeholder="Nom complet" Text="{Binding FullName}" />
        <Entry Placeholder="Téléphone" Text="{Binding PhoneNumber}" Keyboard="Telephone" />
        <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />

        <!-- Section Chauffeur liée à IsDriver -->
        <VerticalStackLayout IsVisible="{Binding IsDriver}" Spacing="10">
            <Entry Placeholder="Modèle voiture" Text="{Binding CarModel}" />
            <Entry Placeholder="Nombre de places" Text="{Binding Seats}" Keyboard="Numeric" />
        </VerticalStackLayout>

        <Button Text="S'inscrire" Command="{Binding RegisterCommand}" />

    </VerticalStackLayout>
</ContentPage>