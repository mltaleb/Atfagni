<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atfagni.Mobile.Views.Auth.LoginPage"
             xmlns:vm="clr-namespace:Atfagni.Mobile.ViewModels.Auth"
             x:DataType="vm:LoginViewModel"
             Title="LoginPage">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Connexion" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry Placeholder="Numéro de téléphone" Text="{Binding Phone}" Keyboard="Telephone" />
        <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />

        <Button Text="SE CONNECTER" Command="{Binding LoginCommand}" BackgroundColor="#2196F3" />

        <Button Text="Pas encore de compte ? S'inscrire" 
            Command="{Binding GoToRegisterCommand}" 
            BackgroundColor="Transparent" TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>