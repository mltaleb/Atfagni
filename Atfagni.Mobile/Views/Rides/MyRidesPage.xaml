<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Atfagni.Mobile.ViewModels.Rides"
             xmlns:dto="clr-namespace:Atfagni.Shared.DTOs;assembly=Atfagni.Shared"
             x:DataType="vm:MyRidesViewModel"
              xmlns:controls="clr-namespace:Atfagni.Mobile.Controls"
             x:Class="Atfagni.Mobile.Views.Rides.MyRidesPage"
             Title="Mes Trajets"
             BackgroundColor="#F5F5F5">

    <Grid>
        <!-- 1. LA LISTE DES TRAJETS -->
        <RefreshView Command="{Binding LoadRidesCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Rides}" Margin="15,0">
                <CollectionView.Header>
                    <Label Text="Vos publications" FontSize="14" TextColor="Gray" Margin="0,15"/>
                </CollectionView.Header>

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="ðŸ“­" FontSize="50"/>
                        <Label Text="Aucun trajet publiÃ©." TextColor="Gray"/>
                        <Label Text="Appuyez sur + pour commencer" TextColor="#2196F3"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:RideDto">
                        <!-- CARTE TYPE "TICKET" -->
                        <Border Margin="0,0,0,15" StrokeShape="RoundRectangle 15" StrokeThickness="0" BackgroundColor="White" Padding="0">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                            </Border.Shadow>

                            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="8, *">
                                <!-- Barre de couleur latÃ©rale (Statut) -->
                                <!-- Tu pourras changer la couleur via un Converter plus tard (Vert=Scheduled, Gris=Finished) -->
                                <BoxView Grid.RowSpan="3" Grid.Column="0" Color="#2196F3"/>

                                <!-- Contenu -->
                                <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*, Auto" Padding="15,15,15,5">
                                    <Label Text="{Binding DepartureTime, StringFormat='{0:ddd d MMM Ã  HH:mm}'}" 
                                           TextColor="#2196F3" FontAttributes="Bold" FontSize="12"/>
                                    <Label Grid.Column="1" Text="{Binding Price, StringFormat='{0} DA'}" 
                                           FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                                </Grid>

                                <!-- Trajet Visuel -->
                                <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto, Auto" ColumnDefinitions="20, *" Padding="15,5">
                                    <!-- Ligne verticale -->
                                    <BoxView Grid.RowSpan="2" Grid.Column="0" WidthRequest="1" Color="LightGray" HorizontalOptions="Center" VerticalOptions="Fill" Margin="0,8"/>

                                    <!-- DÃ©part -->
                                    <Label Grid.Row="0" Grid.Column="0" Text="ðŸŸ¢" FontSize="8" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding StartLocation}" FontSize="16" FontAttributes="Bold" TextColor="#333" Margin="5,0,0,10"/>

                                    <!-- ArrivÃ©e -->
                                    <Label Grid.Row="1" Grid.Column="0" Text="ðŸ”´" FontSize="8" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding EndLocation}" FontSize="16" FontAttributes="Bold" TextColor="#333" Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Actions (Footer) -->
                                <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="*, Auto" Padding="15,10">
                                    <Label Text="{Binding Status}" VerticalOptions="Center" TextColor="Gray" FontSize="12" FontAttributes="Italic"/>

                                    <!-- Bouton Supprimer discret -->
                                    <Button Grid.Column="1" Text="Annuler" TextColor="#FF5252" BackgroundColor="Transparent" 
                                            FontSize="12" HeightRequest="30" Padding="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyRidesViewModel}}, Path=DeleteRideCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- 2. LE BOUTON FLOTTANT (FAB) -->
        <!-- PlacÃ© en bas Ã  droite grÃ¢ce aux Options -->
        <Button Text="+" 
                Command="{Binding GoToPublishCommand}"
                BackgroundColor="#2196F3" 
                TextColor="White" 
                FontSize="30"
                CornerRadius="30"
                HeightRequest="60" 
                WidthRequest="60"
                HorizontalOptions="End" 
                VerticalOptions="End"
                Margin="20">
            <Button.Shadow>
                <Shadow Brush="#000" Opacity="0.3" Radius="10" Offset="0,5"/>
            </Button.Shadow>
        </Button>
        <controls:LoadingOverlay IsBusy="{Binding IsBusy}" 
                         LoadingMessage="" />
    </Grid>
</ContentPage>